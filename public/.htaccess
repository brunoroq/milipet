Options -Indexes
RewriteEngine On

# Servir archivos y directorios existentes directamente
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Expl√≠citamente permitir que assets/ pasen sin rewrite
RewriteRule ^assets/ - [L]

# Front controller para el resto
RewriteRule ^ index.php [L,QSA]

# No indexar rutas de admin o auth
<IfModule mod_headers.c>
	<FilesMatch "admin|auth">
		Header set X-Robots-Tag "noindex, nofollow"
	</FilesMatch>
</IfModule>
